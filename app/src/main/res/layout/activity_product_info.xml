<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationIconTint="@color/white"
            app:navigationIcon="@drawable/ic_home"
            app:title="@string/product_info_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/productInfoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/productInfoTitle" />

    <TextView
        android:id="@+id/productInfoPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/productInfoTitle" />

    <TextView
        android:id="@+id/productInfoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/productInfoTitle" />

</LinearLayout>